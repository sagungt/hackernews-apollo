{
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
        ],
        "@typescript-eslint/indent": [
            "error",
            2
        ],
        "import/prefer-default-export": 0
    },
    "ignorePatterns": ["nexus-typegen.ts"]
}
